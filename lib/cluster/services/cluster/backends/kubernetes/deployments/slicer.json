{
    "apiVersion": "apps/v1",
    "kind": "Deployment",
    "metadata": {
        "labels": {
            "app": "teraslice",
            "nodeType": "execution_controller",
            "exId": "<EXID>"
        },
        "name": "teraslice-execution_controller-<EXID>"
    },
    "spec": {
        "replicas": 1,
        "template": {
            "metadata": {
                "labels": {
                    "app": "teraslice",
                    "nodeType": "execution_controller",
                    "exId": "<EXID>"
                }
            },
            "spec": {
                "containers": [{
                    "image": "teraslice:asgdev",
                    "name": "teraslice-execution_controller-<EXID>",
                    "ports": [{ "containerPort": 45680 }],
                    "volumeMounts": [{
                        "mountPath": "/app/config",
                        "name": "config"
                    }],
                    "env": [{
                        "name": "node_type",
                        "value": "execution_controller"
                    },
                    {
                        "name": "EX",
                        "value": "<EX>"
                    },
                    {
                        "name": "POD_IP",
                        "valueFrom": {
                            "fieldRef": {
                                "fieldPath": "status.podIP"
                            }
                        }
                    }]
                }],
                "volumes": [{
                    "name": "config",
                    "configMap": {
                        "name": "teraslice-worker",
                        "items": [{
                            "key": "teraslice-worker.yml",
                            "path": "teraslice.yaml"
                        }]
                    }
                }],
                "imagePullSecrets": [{ "name": "docker-tera1-secret" }]
            }
        },
        "selector": {
            "matchLabels": {
                "app": "teraslice",
                "nodeType": "execution_controller",
                "exId": "<EXID>"
            }
        }
    }
}